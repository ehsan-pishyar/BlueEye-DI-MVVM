<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/img_ehsan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/worker"
        android:layout_marginBottom="120dp"
        android:padding="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_about"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/about_background"
        android:padding="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/img_location_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_location"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_location_about"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Iran, Tehran"
            android:fontFamily="@font/maven_pro"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/img_location_about"
            app:layout_constraintTop_toTopOf="@+id/img_location_about"
            app:layout_constraintBottom_toBottomOf="@+id/img_location_about"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/img_email_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_email"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/img_location_about"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_email_about"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="ehsan.pishyar@gmail.com"
            android:fontFamily="@font/maven_pro"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/img_email_about"
            app:layout_constraintTop_toTopOf="@+id/img_email_about"
            app:layout_constraintBottom_toBottomOf="@+id/img_email_about"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/img_github_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_github"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/img_email_about"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_github_about"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="github.com/ehsanpishyar"
            android:fontFamily="@font/maven_pro"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/img_github_about"
            app:layout_constraintTop_toTopOf="@+id/img_github_about"
            app:layout_constraintBottom_toBottomOf="@+id/img_github_about"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ehsan Pishyar"
        android:fontFamily="@font/maven_pro"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="#d1d1d1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="androad.ir"
        android:fontFamily="@font/maven_pro"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="#d1d1d1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>