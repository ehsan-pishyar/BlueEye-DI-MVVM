<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/img_icon_bottom_sheet"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_degree_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="25sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/blue"
        app:layout_constraintTop_toTopOf="@+id/img_icon_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_icon_bottom_sheet"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_degree_blue"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@+id/txt_degree_bottom_sheet"
        app:layout_constraintStart_toEndOf="@+id/txt_degree_bottom_sheet"/>

    <TextView
        android:id="@+id/txt_day_name_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="monday"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/black"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/txt_degree_bottom_sheet"
        app:layout_constraintStart_toEndOf="@+id/txt_degree_bottom_sheet"/>

    <TextView
        android:id="@+id/txt_calendar_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="17 august"
        android:textSize="13sp"
        android:textColor="#777777"
        android:fontFamily="@font/maven_pro"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_day_name_bottom_sheet"
        app:layout_constraintStart_toEndOf="@+id/txt_degree_bottom_sheet"
        app:layout_constraintBottom_toBottomOf="@+id/txt_degree_bottom_sheet"/>

</androidx.constraintlayout.widget.ConstraintLayout>